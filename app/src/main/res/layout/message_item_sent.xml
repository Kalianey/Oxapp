<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llaa"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/main_color_gray"
        android:textSize="@dimen/txt_13sp"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:id="@+id/inner_wrap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_gravity="right">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:text=""
            android:layout_gravity="right|center_vertical"
            android:gravity="center_vertical" />
        
        <LinearLayout
                android:id="@+id/v1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/pad_5dp"
                android:paddingTop="@dimen/pad_5dp"
            android:baselineAligned="false"
            android:layout_marginRight="-5dp"
            android:layout_weight="0.2">

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="200dp"
                android:text=""
                android:autoLink="web|phone|email"
                android:linksClickable="true"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_14sp"
                android:layout_gravity="center|right"
                android:gravity="center_vertical|center_horizontal"
                android:padding="10dp"
                android:background="@drawable/bubble_out"/>

            <!-- Show loading bar for images -->
            <RelativeLayout
                android:id="@+id/loadingPanel"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:background="@drawable/bubble_out"
                android:gravity="center"
                android:visibility="gone">

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminate="true" />
            </RelativeLayout>
            <!-- End show loading bar -->

            <!-- In case of media msg -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/attachment"
                android:layout_gravity="center|right"
                android:visibility="gone"/>
            <!-- End in case of media msg -->

        </LinearLayout>

        <com.kalianey.oxapp.utils.UICircularImage
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/avatarImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="avatar"
            android:paddingRight="10dp"
            app:line_color="@android:color/white"
            app:line_color_press="@color/theme_color"
            app:line_width="1dp"
            app:padding ="0dp"
            android:layout_gravity="bottom" />

    </LinearLayout>

    <TextView
        android:id="@+id/delivered"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/extra_info"
        android:textColor="@color/main_color_gray"
        android:textSize="@dimen/txt_14sp"
        android:layout_marginTop="@dimen/pad_5dp"
        android:layout_marginRight="@dimen/pad_20dp"
        android:layout_gravity="right"
        android:layout_weight="1.0" />
</LinearLayout>
