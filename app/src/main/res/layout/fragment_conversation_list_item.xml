<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/item_wrapper">

        <com.kalianey.oxapp.utils.UICircularImage
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/avatarImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical ="true"
            android:contentDescription="avatar"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            app:line_color="@android:color/white"
            app:line_color_press="@color/theme_color"
            app:line_width="1dp"
            app:padding ="0dp"
            android:layout_marginRight="10dp" />

        <!--com.android.volley.toolbox.NetworkImageView
            android:id="@+id/avatarImageView"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:paddingRight="10dp" /-->

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textStyle="bold"
                android:textColor="#ff212121"
                android:textSize="16sp"

                />

            <ImageView
                android:id="@+id/userStatus"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:src="@drawable/online_button"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/previewText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PreviewText"
                android:textStyle="normal"
                android:textColor="#ff212121"
                android:textSize="11sp"

                android:paddingRight="1dp"
                android:layout_marginLeft="2dp" />

        </LinearLayout>

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="right">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right">

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff212121"
                android:textSize="9sp"
                android:layout_marginTop="5dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:src="@drawable/icon_arrow_right"
                android:contentDescription="arrow-right"
                android:layout_gravity="bottom"
                android:paddingTop="2dp" />


        </LinearLayout>

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:id="@+id/seenStatusTick"
                android:layout_marginBottom="0dp"
                android:contentDescription="@string/seen"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:layout_alignParentStart="false"
                android:layout_below="@+id/item_wrapper"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_gravity="right" />

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>